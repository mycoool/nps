FROM golang:latest AS builder
# ARG GOPROXY=direct
ARG GOPROXY=https://proxy.golang.org
WORKDIR /go/src/github.com/mycoool/nps
COPY . .
RUN go mod edit -go=$(go version | awk '{print $3}' | sed 's/go//') && \
    go mod tidy && \
    go get -d -v ./...
RUN CGO_ENABLED=0 go build -ldflags="-w -s -extldflags -static" ./cmd/npc/npc.go
RUN mkdir tmp

FROM scratch
COPY --from=builder /go/src/github.com/mycoool/nps/npc /
COPY --from=builder /go/src/github.com/mycoool/nps/tmp /tmp
VOLUME /conf
ENTRYPOINT ["/npc"]
